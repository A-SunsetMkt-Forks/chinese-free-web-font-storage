---
import { URLLinkHelp } from '../configs';
import { sections } from '../utils/getPostSections';
---

<footer class="flex flex-col w-full bg-black text-white gap-8">
    <div class="grid grid-cols-2 gap-8 sm:grid-cols-3 w-full text-sm px-4 md:px-24 py-12">
        <div>
            <header class="text-lg">🛳️文档</header>
            <ul>
                {
                    [...sections.entries()].map(([sectionName, i]) => {
                        return (
                            <li>
                                <a href={`/article#${sectionName}`}>
                                    🎉 {sectionName}
                                    <sup>{i.length}</sup>
                                </a>
                            </li>
                        );
                    })
                }
            </ul>
        </div>
        <div>
            <header class="text-lg">🎉帮助</header>
            <ul>
                <li>
                    <a href="https://github.com/konghayao" target="_blank"> Github</a>
                </li>
            </ul>
        </div>
        <div>
            <header class="text-lg">🎉 友链</header>
            <ul>
                {
                    [...Object.values(URLLinkHelp)].map((item) => {
                        return (
                            <li>
                                <a href={item.url}>🎊 {item.desc}</a>
                            </li>
                        );
                    })
                }
            </ul>
        </div>
    </div>
    <div class="flex justify-between text-xs text-neutral-300 border-t border-neutral-600 p-4">
        <div></div>
        <div>© 2023 Made with ❤ by 江夏尧</div>
    </div>
</footer>
