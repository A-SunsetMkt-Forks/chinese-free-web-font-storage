---
import "../index.css";
import GlobalHeader from "../components/GlobalHeader.astro";
import { SEO } from "astro-seo";
export interface Props {
    title?: string;
    description?: string;
    canonicalURL?: string;
    type?:
        | "website"
        | "article"
        | "blog"
        | "product"
        | "profile"
        | "music"
        | "video";
    image?: string;
    keywords?: string;
    meta?: any;
    defaultFontCSS?: string;
    style?: string;
}
const {
    title = "中文网字计划",
    description = "中文网字体计划，致力于提供免费的中文网络 CSS 字体支持",
    canonicalURL,
    image = "",
    type: ogType,
    keywords,
    style,
    defaultFontCSS = "https://ik.imagekit.io/chinesefonts/packages/jxzk/dist/%E6%B1%9F%E8%A5%BF%E6%8B%99%E6%A5%B7/result.css",
} = Astro.props;
---

<!DOCTYPE html>
<html lang="zh">
    <head>
        <!-- Global Metadata -->
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width,initial-scale=1" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <!-- Canonical URL -->
        {canonicalURL && <link rel="canonical" href={canonicalURL} />}
        <slot name="meta" />
        <!-- Primary Meta Tags -->
        <title>{title}</title>
        <SEO
            title={title}
            description={description}
            openGraph={{
                basic: {
                    title: title,
                    type: ogType ?? "website",
                    image,
                },
                optional: {
                    siteName: "中文网字计划",
                },
            }}
        />
        <meta name="keywords" content={"中文字体,css,webfont" + keywords} />
        <link rel="stylesheet" href={defaultFontCSS} />
    </head>
    <body style={style}>
        <GlobalHeader />
        <slot />
    </body>
</html>
